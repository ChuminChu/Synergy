<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 말풍선의 배경색을 노란색으로 설정 -->
    <solid android:color="#FFD400" /> <!-- 노란색 -->

    <!-- 말풍선 모서리 둥글게 -->
    <corners android:radius="16dp" />

    <!-- 말풍선 내부 여백 추가 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
