<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 초록색 테두리를 그리는 shape -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1.5dp"
                android:color="#03C75A" /> <!-- 테두리 색상을 초록색으로 설정 -->
        </shape>
    </item>
    <!-- 안쪽 흰색 영역을 그리는 shape -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="#FFFFFF" /> <!-- 안쪽 영역 테두리 색상을 흰색으로 설정 -->
        </shape>
    </item>
</layer-list>
