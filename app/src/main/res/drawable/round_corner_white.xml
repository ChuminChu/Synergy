<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#ffffff"/> <!-- 박스의 배경색 -->
    <corners android:radius="27dp"/> <!-- 모서리를 둥글게 하는 반지름 -->
    <stroke
        android:width="1dp"
        android:color="#FFB5B5B5"/> <!-- 테두리 선의 두께와 색상 -->

    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" /> <!-- 그림자를 위한 여백 설정 -->
</shape>
