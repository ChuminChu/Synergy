<!-- activity_icon_detail.xml -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFF0">

    <!-- Toolbar 추가 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Icon Detail"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 아이보리 큰 박스 -->


    <LinearLayout
        android:id="@+id/ivoryBox"
        android:layout_width="346dp"
        android:layout_height="537dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.0"> <!-- 바닥에도 제약 조건 추가 -->

        <!-- 아이콘 -->
        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="245dp"
            android:layout_height="329dp"
            android:layout_gravity="center"
            android:src="@drawable/sound" />

        <!-- 텍스트 -->

        <!-- 설명 -->

        <TextView
            android:id="@+id/iconTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="음량 조절"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/iconDescriptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@{iconInfo != null ? iconInfo.iconDescription : \"
            android:textSize="20sp" />



    </LinearLayout>

    <Button
        android:id="@+id/btnPrevious"
        android:layout_width="109dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="이전"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/ivoryBox"
        app:layout_constraintEnd_toStartOf="@+id/btnFirst"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFirst"
        android:layout_width="109dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="처음으로"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/ivoryBox"
        app:layout_constraintStart_toEndOf="@+id/btnPrevious"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="109dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="다음"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/ivoryBox"
        app:layout_constraintStart_toEndOf="@+id/btnFirst"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>