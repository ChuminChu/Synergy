<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/icon_green"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:background="@color/eduColor1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/iconedu_tool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:text="2강 용어사전"
                android:textSize="28sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="19dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/iconedu_tool_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:text="모르는 용어에 대해 학습해보세요."
                android:textSize="22sp"
                android:textColor="#E1E1E1"
                android:letterSpacing="-0.01"
                app:layout_constraintTop_toBottomOf="@id/iconedu_tool"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="7dp"
                android:layout_marginStart="32dp"/>

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_bar"
                app:layout_constraintTop_toBottomOf="@id/iconedu_tool_2"
                app:layout_constraintStart_toStartOf="@id/iconedu_tool_2"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_search_black_24dp"
                app:layout_constraintTop_toTopOf="@id/searchIcon"
                app:layout_constraintStart_toStartOf="@id/searchIcon"
                android:layout_marginTop="7dp"
                android:layout_marginStart="23dp"/>

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/searchIcon"
                app:layout_constraintStart_toStartOf="@id/searchIcon"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="18sp"
                android:textColor="#B3000000"
                android:hint="검색해주세요"
                android:layout_marginStart="64dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/itemView"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/round_corner_white_2"
            android:layout_margin="24dp">

            <TextView
                android:id="@+id/icon_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                android:text="와이파이(WIFI)"
                android:letterSpacing="-0.05"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/icon_detail_iv"
                android:layout_width="147dp"
                android:layout_height="147dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@id/icon_tv_2" />


            <TextView
                android:id="@+id/another_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="text"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/black"
                android:letterSpacing="-0.03"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="30sp"
                android:background="@color/bgColor3"
                android:layout_gravity="center"
                />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>