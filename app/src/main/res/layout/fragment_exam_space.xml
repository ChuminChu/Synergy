<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".training_space.fragment.ExamResultFragment"
    android:background="@color/ivory">

    <!-- 상단 이미지와 텍스트 영역 -->
    <ImageView
        android:id="@+id/top_bar_image"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:background="@color/practiceColor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/learingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:text="실습공간"
        android:textColor="@color/white"
        android:paddingTop="19dp"
        android:paddingStart="24dp"
        app:layout_constraintTop_toTopOf="@id/top_bar_image"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/learingSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/white"
        android:alpha="0.90"
        android:letterSpacing="-0.01"
        android:text="자신의 실력을 검증하세요."
        android:paddingStart="24dp"
        android:paddingTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/learingTitle" />

    <!-- 유형별 실습 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/type_exercise_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/all_exercise_layout"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintHeight_percent="0.3"
        android:layout_marginTop="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_button"
        android:elevation="6dp">

        <com.sungkyul.synergy.utils.GalaxyButton
            android:id="@+id/type_exercise_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/type_exercise_text_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/type_exercise_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="유형별"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/category_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="실습"
                android:fontFamily="@font/pretendard_semibold"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/type_exercise_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_solve_type"
            android:scaleType="centerInside"
            app:layout_constraintTop_toBottomOf="@id/type_exercise_text_group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.64"
            app:layout_constraintHeight_percent="0.4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 전체 실습 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all_exercise_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_image"
        app:layout_constraintStart_toEndOf="@+id/type_exercise_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintHeight_percent="0.3"
        android:layout_marginTop="26dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_button"
        android:elevation="6dp">

        <com.sungkyul.synergy.utils.GalaxyButton
            android:id="@+id/all_exercise_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/all_exercise_text_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/all_exercise_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="실습형"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/all_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="문제"
                android:fontFamily="@font/pretendard_semibold"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/all_exercise_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_solve_all"
            android:scaleType="centerInside"
            app:layout_constraintTop_toBottomOf="@id/all_exercise_text_group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 취약점 공략 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/attacking_vulnerabilities_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/type_exercise_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/difficulty_practice_layout"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintHeight_percent="0.3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_button"
        android:elevation="6dp">

        <com.sungkyul.synergy.utils.GalaxyButton
            android:id="@+id/attacking_vulnerabilities_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/attacking_vulnerabilities_text_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/attacking_vulnerabilities_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/weak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="취약점"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/weak_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="공략"
                android:fontFamily="@font/pretendard_semibold"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/attacking_vulnerabilities_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_solve_weak"
            android:scaleType="centerInside"
            app:layout_constraintTop_toBottomOf="@id/attacking_vulnerabilities_text_group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.68"
            app:layout_constraintHeight_percent="0.4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 난이도 실습 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/difficulty_practice_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/all_exercise_layout"
        app:layout_constraintStart_toEndOf="@+id/attacking_vulnerabilities_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintHeight_percent="0.3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_button"
        android:elevation="6dp">

        <com.sungkyul.synergy.utils.GalaxyButton
            android:id="@+id/difficulty_practice_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/difficulty_practice_text_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/difficulty_practice_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/difficulty2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="난이도"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/difficulty2_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="실습"
                android:fontFamily="@font/pretendard_semibold"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/difficulty_practice_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_solve_star"
            android:scaleType="centerInside"
            app:layout_constraintTop_toBottomOf="@id/difficulty_practice_text_group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.54"
            app:layout_constraintHeight_percent="0.4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
