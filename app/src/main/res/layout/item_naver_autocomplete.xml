<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/naver_post"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="4dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:src="@drawable/todo_circle"
        android:scaleType="centerInside"
        android:contentDescription="@string/profile_image"/>

    <TextView
        android:id="@+id/search_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/synergy"
        android:textSize="16sp"
        android:textColor="@color/naver_search_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <ImageButton
            android:id="@+id/selection_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/todo_circle"
            android:scaleType="centerInside"
            android:background="@null"
            android:contentDescription="@string/selection_button"/>

    </LinearLayout>

</LinearLayout>
