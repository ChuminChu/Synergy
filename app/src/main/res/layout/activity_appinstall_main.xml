<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".learning_space.appinstall.installMainActivity">

    <com.sungkyul.synergy.utils.edu.EduScreen
        android:id="@+id/edu_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <View
        android:id="@+id/install_main_top"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:background="@drawable/appinstall_rounded_edittext_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/install_main_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search_grey_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="1dp"/>

        <EditText
            android:id="@+id/app_install_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="앱 및 게임 검색"
            android:textColorHint="#464749"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_mic_grey_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-40dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="1dp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="26dp"
        android:layout_height="31dp"
        android:background="#00FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/install_main_top"
        app:layout_constraintEnd_toStartOf="@+id/imageView38"
        app:layout_constraintStart_toEndOf="@+id/search_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/ic_install_alarm"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="26dp"
        android:layout_height="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/install_main_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="@+id/install_main_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258"
        app:srcCompat="@drawable/ic_circle_profile"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView157"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추천"
        android:textColor="#0064B3"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/install_main_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <TextView
        android:id="@+id/textView169"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기 차트"
        android:textColor="#444645"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/install_main_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <TextView
        android:id="@+id/textView170"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다른 기기"
        android:textColor="#444645"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/install_main_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <TextView
        android:id="@+id/textView171"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textColor="#444645"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/install_main_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <View
        android:id="@+id/recommend_blue_line"
        android:layout_width="30dp"
        android:layout_height="3dp"
        android:background="#0064B3"
        app:layout_constraintBottom_toBottomOf="@+id/install_main_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/install_grey_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#E4E4E4"
        app:layout_constraintTop_toBottomOf="@id/recommend_blue_line"/>

    <RelativeLayout
        android:id="@+id/main_ad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/install_grey_line"
        android:layout_marginTop="0dp">

        <!-- 광고 이미지 -->
        <ImageView
            android:id="@+id/install_ad_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/appinstall_main_ad_image"
            android:scaleType="fitCenter"
            android:layout_marginTop="-10dp" />

        <!-- 왼쪽 이미지 -->
        <ImageView
            android:id="@+id/left_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_appinstall_synergylogo_storke"
            android:layout_below="@id/install_ad_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <!-- 가운데 텍스트 -->
        <TextView
            android:id="@+id/main_ad_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/install_ad_image"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/left_image"
            android:text="시너지"
            android:textColor="#1F1F1F"
            android:textSize="16sp" />

        <!-- 설치 버튼 -->
        <Button
            android:id="@+id/main_ad_install_btn"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:layout_below="@id/install_ad_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/install_rounded_blue_btn_background"
            android:text="설치"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- 설치 버튼 아래 텍스트 -->
        <TextView
            android:id="@+id/main_ad_install_btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_ad_install_btn"
            android:layout_marginStart="246dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="24dp"
            android:text="인앱 구매"
            android:textColor="#434746"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"/>

        <!-- 가운데 아래 텍스트 -->
        <TextView
            android:id="@+id/main_ad_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_ad_text"
            android:layout_toEndOf="@id/left_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:text="Synergy • "
            android:textColor="#1F1F1F"
            android:textSize="16sp" />

        <!-- 메인 광고 앱 연령 이미지 -->
        <ImageView
            android:id="@+id/main_ad_info_image"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_install_age"
            android:layout_below="@id/main_ad_info_text"
            android:layout_alignTop="@id/main_ad_info_text"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/main_ad_info_text" />

        <!-- 메인 광고 앱 연령 텍스트 -->
        <TextView
            android:id="@+id/main_ad_age_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_ad_text"
            android:layout_toEndOf="@id/main_ad_info_image"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:text="• 4.5"
            android:textColor="#1F1F1F"
            android:textSize="16sp" />

        <!-- 메인 광고 앱 별 이미지 -->
        <ImageView
            android:id="@+id/main_ad_star_image"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_install_star_black"
            android:layout_below="@id/main_ad_age_text1"
            android:layout_toEndOf="@id/main_ad_age_text1"
            android:layout_marginTop="-17dp"
            android:layout_marginStart="3dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_ad_layout"
        android:layout_marginTop="30dp">

        <!-- 가운데 아래 텍스트 -->
        <TextView
            android:id="@+id/install_recommend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="1dp"
            android:text="스폰서  •  추천"
            android:textColor="#1F1F1F"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_naver_add_grey_24"
            android:layout_alignTop="@id/install_recommend_text"
            android:layout_marginStart="380dp"
            android:layout_marginTop="6dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/app_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_layout"
        android:layout_marginTop="20dp">

        <!-- 앱 이미지 -->
        <ImageView
            android:id="@+id/app_image1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_install_logo_naver"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <!-- 앱 이름 텍스트 -->
        <TextView
            android:id="@+id/app_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/app_image1"
            android:layout_alignTop="@id/app_image1"
            android:layout_marginStart="10dp"
            android:text="네이버 - NAVER"
            android:textColor="#1F1F1F"
            android:textSize="16sp" />


        <!-- 앱 설명 텍스트 -->
        <TextView
            android:id="@+id/app_info_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_text1"
            android:layout_alignStart="@id/app_text1"
            android:layout_marginTop="4dp"
            android:text="도서/참고자료 • 도구"
            android:textColor="#444645"
            android:textSize="14sp" />

        <!-- 앱 평점 텍스트 -->
        <TextView
            android:id="@+id/app_ad_grade_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_info_text1"
            android:layout_alignStart="@id/app_info_text1"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:text="3.7"
            android:textColor="#1F1F1F"
            android:textSize="16sp" />

        <!-- 앱 별 이미지 -->
        <ImageView
            android:id="@+id/app_ad_star_image1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_install_star_black"
            android:layout_alignTop="@id/app_ad_grade_text1"
            android:layout_toEndOf="@id/app_ad_grade_text1"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"/>


        <!-- 앱 이미지 2 -->
        <ImageView
            android:id="@+id/app_image2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_install_logo_navermap"
            android:layout_below="@id/app_image1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="34dp"/>


        <!-- 앱 이름 텍스트2 -->
        <TextView
            android:id="@+id/app_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/app_image2"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/app_image2"
            android:text="네이버 지도, 내비게이션"
            android:textColor="#1F1F1F"
            android:textSize="16sp" />

        <!-- 앱 설명 텍스트2 -->
        <TextView
            android:id="@+id/app_info_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_text2"
            android:layout_alignStart="@id/app_text2"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:text="지도 및 내비게이션"
            android:textColor="#444645"
            android:textSize="14sp" />


        <!-- 앱 평점 텍스트2 -->
        <TextView
            android:id="@+id/app_ad_grade_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_info_text2"
            android:layout_alignStart="@id/app_info_text2"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:text="3.6"
            android:textColor="#1F1F1F"
            android:textSize="16sp" />

        <!-- 앱 별 이미지2 -->
        <ImageView
            android:id="@+id/app_ad_star_image2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_install_star_black"
            android:layout_alignTop="@id/app_ad_grade_text2"
            android:layout_toEndOf="@id/app_ad_grade_text2"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"/>


        <!-- 앱 이미지 3 -->
        <ImageView
            android:id="@+id/app_image3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_install_logo_insta"
            android:layout_below="@id/app_image2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="34dp"/>

        <!-- 앱 이름 텍스트3 -->
        <TextView
            android:id="@+id/app_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/app_image3"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/app_image3"
            android:text="Instagram"
            android:textColor="#1F1F1F"
            android:textSize="16sp" />


        <!-- 앱 설명 텍스트3 -->
        <TextView
            android:id="@+id/app_info_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_text3"
            android:layout_alignStart="@id/app_text3"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:text="소셜 • 네트워킹"
            android:textColor="#444645"
            android:textSize="14sp" />


        <!-- 앱 평점 텍스트3 -->
        <TextView
            android:id="@+id/app_ad_grade_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_info_text3"
            android:layout_alignStart="@id/app_info_text3"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:text="3.9"
            android:textColor="#1F1F1F"
            android:textSize="16sp" />

        <!-- 앱 별 이미지3 -->
        <ImageView
            android:id="@+id/app_ad_star_image3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_install_star_black"
            android:layout_alignTop="@id/app_ad_grade_text3"
            android:layout_toEndOf="@id/app_ad_grade_text3"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>