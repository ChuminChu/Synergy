<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="5dp"
    android:id="@+id/friend_detail_LL"
    android:background="@android:color/white">
    <LinearLayout
        android:id="@+id/kakao_list"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"> <!-- 텍스트1과 텍스트2를 세로로 정렬하기 위해 orientation을 vertical로 변경 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"> <!-- 사진과 텍스트1을 가로로 정렬하기 위해 orientation을 horizontal로 변경 -->

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#8FCBDD"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/profile_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/profile_kakao" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서인국"
                    android:textSize="15dp"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_message"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요~~!!" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
