<?xml version="1.0" encoding="utf-8"?>
<!--최근 ?전화 목록?-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/phoneBgColor">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="@color/black">
        
        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_call_profile_24"/>
    
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:gravity="start|center_vertical">
    
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/synergy"
                android:textSize="16sp"/>
    
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
    
                <ImageView
                    android:id="@+id/status_image"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_incoming_call_24"/>
    
                <TextView
                    android:id="@+id/status_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="휴대전화"
                    android:textSize="12sp"/>
    
            </LinearLayout>
    
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end|center_vertical">
    
            <ImageView
                android:id="@+id/mic"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_mic_24"/>
    
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후 12:00"
                android:textSize="12sp"/>
    
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hidden_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/phone_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대전화: 010-1234-5678"
            android:textSize="12sp"
            android:textColor="@color/phoneGreen"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/call_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_call_green_24"
                android:scaleType="centerInside"
                android:background="@drawable/black_circle"/>

            <ImageButton
                android:id="@+id/message_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_message_circle_blue_24"
                android:scaleType="centerInside"
                android:background="@drawable/black_circle"/>

            <ImageButton
                android:id="@+id/video_call_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_video_green_24"
                android:scaleType="centerInside"
                android:background="@drawable/black_circle"/>

            <ImageButton
                android:id="@+id/info_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_info_24"
                android:scaleType="centerInside"
                android:background="@drawable/black_circle"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
