<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/gallery_album"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="12dp"
    android:background="@color/gallery_album_bg">

    <ImageView
        android:id="@+id/album_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:src="@drawable/sample_screenshot2"
        android:scaleType="centerInside"
        android:contentDescription="@string/synergy"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/synergy"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/album_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/one"
            android:textSize="12sp"
            android:textColor="@color/gallery_album_count"/>

    </LinearLayout>

</LinearLayout>
