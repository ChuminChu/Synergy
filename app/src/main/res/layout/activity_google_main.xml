<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Google 로고 이미지 -->
    <ImageView
        android:id="@+id/google_logo"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/googlelogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/search_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <!-- 검색창 -->
    <EditText
        android:id="@+id/search_box"
        android:layout_width="390dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/google_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:background="@drawable/rounded_button_with_border"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintMarginStart="16dp"
        app:layout_constraintMarginEnd="16dp" />

    <!-- 돋보기 검색 버튼 -->
    <ImageView
        android:id="@+id/search_lens_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/google_search"
        app:layout_constraintTop_toBottomOf="@+id/google_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/search_box"
        android:layout_marginEnd="365dp"
        android:layout_marginTop="11dp"
        />

    <!-- 이미지 검색 버튼 -->
    <ImageView
        android:id="@+id/image_search_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/google_lens"
        app:layout_constraintTop_toBottomOf="@+id/google_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/search_box"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"/>

    <!-- 음성 검색 버튼 -->
    <ImageView
        android:id="@+id/voice_search_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/google_voice"
        app:layout_constraintTop_toBottomOf="@+id/google_logo"
        app:layout_constraintEnd_toStartOf="@+id/image_search_button"
        app:layout_constraintMarginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/search_box"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="5dp"
        />

    <!-- 예측된 검색어 텍스트뷰들을 추가합니다 -->

</androidx.constraintlayout.widget.ConstraintLayout>
